<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#00FFFFFF"
        android:layout_marginHorizontal="24dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center_vertical"
            android:background="#000000" />

        <TextView
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/white"
            android:paddingHorizontal="16dp"
            android:text="PILIH KELAS"
            android:textSize="24dp" />
    </androidx.cardview.widget.CardView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <Button
        android:id="@+id/btnPenilaianKelasA"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/lavender"
        android:text="Kelas A"
        android:textSize="18sp"
        app:icon="@drawable/kelas" />

    <Button
        android:id="@+id/btnPenilaianKelasB"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/lavender"
        android:text="Kelas B"
        android:textSize="18sp"
        app:icon="@drawable/kelas" />

    <Button
        android:id="@+id/btnPenilaianKelasC"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/lavender"
        android:text="Kelas C"
        android:textSize="18sp"
        app:icon="@drawable/kelas" />

    <Button
        android:id="@+id/btnPenilaianKelasD"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/lavender"
        android:text="Kelas D"
        android:textSize="18sp"
        app:icon="@drawable/kelas" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="36dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="12dp"
            android:background="@android:drawable/stat_sys_warning"
            android:backgroundTint="#FF9800"/>

        <TextView
            style="@style/TextAppearance.AppCompat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih kelas terlebih dahulu untuk melakukan penilaian santri tiap kelas!"
            android:lines="2"
            android:textColor="#F34747"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="24dp" />
    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>
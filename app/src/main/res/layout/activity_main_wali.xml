<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#00FFFFFF">

            <ImageView
                android:id="@+id/btnLogoutWali"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:padding="8dp"
                android:src="@drawable/login"
                android:layout_gravity="end"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card1"
                android:layout_width="300dp"
                android:layout_height="160dp"
                android:backgroundTint="#00FFFFFF"
                app:cardElevation="0dp"
                android:layout_gravity="center"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/logopndk" />

                <TextView
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text="RTG RAISAA"
                    android:textSize="22sp"
                    android:textStyle="italic" />
            </com.google.android.material.card.MaterialCardView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/titleSantri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil Santri"
            android:layout_marginTop="12dp"
            style="@style/TextAppearance.AppCompat.Title"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#00FFFFFF"
            app:strokeWidth="1dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/black" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    android:backgroundTint="#00FFFFFF">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/mainFotoProfil"
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:src="@drawable/users"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/btnDetailProfil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:text="Detail"
                        android:textColor="@color/lavender"
                        android:layout_gravity="end"
                        style="@style/TextAppearance.AppCompat.Subhead"/>
                </androidx.cardview.widget.CardView>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:boxCornerRadiusBottomEnd="25dp"
                    app:boxCornerRadiusBottomStart="25dp"
                    app:boxCornerRadiusTopEnd="25dp"
                    app:boxCornerRadiusTopStart="25dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/mainNamaSantri"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:hint="Nama Santri"
                        android:textColor="@color/black"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    android:backgroundTint="#00FFFFFF">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:boxCornerRadiusBottomEnd="25dp"
                        app:boxCornerRadiusBottomStart="25dp"
                        app:boxCornerRadiusTopEnd="25dp"
                        app:boxCornerRadiusTopStart="25dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/mainNisSantri"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:hint="NIS"
                            android:textColor="@color/black"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="end"
                        app:boxCornerRadiusBottomEnd="25dp"
                        app:boxCornerRadiusBottomStart="25dp"
                        app:boxCornerRadiusTopEnd="25dp"
                        app:boxCornerRadiusTopStart="25dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/mainKelasSantri"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:hint="Kelas"
                            android:textColor="@color/black"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.cardview.widget.CardView>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:boxCornerRadiusBottomEnd="25dp"
                    app:boxCornerRadiusBottomStart="25dp"
                    app:boxCornerRadiusTopEnd="25dp"
                    app:boxCornerRadiusTopStart="25dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/mainNamaWali"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:hint="Nama Wali Santri"
                        android:textColor="@color/black"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnMainUbahProfil"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/lavender_border"
                    android:text="Ubah Profil"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:drawableLeft="@android:drawable/ic_menu_edit" />

                <Button
                    android:id="@+id/btnMainHafalan"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/lavender_border"
                    android:text="Catatan Hafalan"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:drawableLeft="@drawable/catatan"
                    android:drawableTint="#FFFFFF"/>

                <Button
                    android:id="@+id/btnMainPenilaian"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/lavender_border"
                    android:text="Raport Penilaian"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:drawableLeft="@drawable/penilaian"
                    android:drawableTint="#FFFFFF"/>

                <Button
                    android:id="@+id/btnMainAbsensi"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/lavender_border"
                    android:text="Absensi Santri"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"
                    android:drawableLeft="@drawable/absensi"
                    android:drawableTint="#FFFFFF"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>
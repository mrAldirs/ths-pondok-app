            android:screenOrientation="portrait"/>
        <activity android:name=".Walisantri.HafalanWalisantriActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Walisantri.PenilaianWalisantriActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Walisantri.AbsensiWalisantriActivity"
            android:screenOrientation="portrait"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>